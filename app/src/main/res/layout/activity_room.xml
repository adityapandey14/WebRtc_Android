<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- My Video Stream -->
    <TextView
        android:id="@+id/myStreamLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Stream"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <SurfaceView
        android:id="@+id/myStream"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/myStreamLabel"
        android:layout_marginBottom="16dp"
        android:background="@android:color/darker_gray"/>

    <!-- Remote Video Stream -->
    <TextView
        android:id="@+id/remoteStreamLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remote Stream"
        android:textSize="18sp"
        android:layout_below="@id/myStream"
        android:layout_centerHorizontal="true"/>

    <SurfaceView
        android:id="@+id/remoteStream"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/remoteStreamLabel"
        android:layout_marginBottom="16dp"
        android:background="@android:color/darker_gray"/>

    <!-- Call Button -->
    <Button
        android:id="@+id/callButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_centerHorizontal="true"
        android:background="@color/design_default_color_primary_dark"
        android:textColor="@android:color/white"/>

    <!-- Status TextView -->
    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: Waiting for connection..."
        android:textSize="16sp"
        android:layout_above="@id/callButton"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
